<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:clickable="false"
        android:gravity="center_horizontal"
        android:shadowColor="#B0000000"
        android:shadowDx="5.0"
        android:shadowDy="5.0"
        android:shadowRadius="5.0"
        android:text="Game Over"
        android:textColor="@color/red"
        android:textSize="35dip" />

    <TextView
        android:id="@+id/final_project_gameover_current_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="50dip"
        android:textColor="@color/blue"
        android:textSize="22dip" />

    <TextView
        android:id="@+id/final_project_gameover_best_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:textColor="@color/blue"
        android:textSize="22dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.86" >

        <Button
            android:id="@+id/final_project_gameover_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/final_project_gameover_replay"
            android:layout_alignBottom="@id/final_project_gameover_replay"
            android:layout_alignParentRight="true"
            android:layout_marginRight="44dp"
            android:background="#00000000"
            android:drawableTop="@drawable/final_main_quit"
            android:text="Return to Menu"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@id/final_project_gameover_replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="44dp"
            android:background="#00000000"
            android:drawableTop="@drawable/final_end_backtomenu"
            android:text="Restart"
            android:textColor="#000000"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>